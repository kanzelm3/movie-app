.movie-card
  position relative
  flex-grow 1
  transition all .1s
  opacity 0.25
  z-index 1
  &-appear
    transform scale(0.65)
    opacity: 0.01
    &.movie-card-appear-active
      opacity: 1
      transform scale(1)
      transition all 800ms ease-in-out
  &:hover
    transition all .2s ease-in-out
    transform scale(1.05)
    +forBreakpoint(tablet)
      transform scale(1.1)
    +forBreakpoint(desktop)
      transform scale(1.2)
    opacity 1
    z-index 2
  &-poster
    width 100%
    height 100%
    background-color #333
    background-size cover
    background-position center center
  &-title
    position absolute
    bottom 0
    left 0
    right 0
    padding 5px 10px
    overflow hidden
    text-overflow ellipsis
    color #999
    background rgba(33,32,37,0.75)
    &-text
      white-space nowrap
